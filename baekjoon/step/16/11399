import java.util.*;

public class Main {
    public static void main(String[] args) {
    	Scanner sc = new Scanner(System.in);
    	int n = sc.nextInt(); int array[] = new int[n];
    	for(int i=0; i<n; i++)
    		array[i] = sc.nextInt();
    	Arrays.sort(array);
    	int sum=0; int result=0;
    	for(int i=0; i<n; i++) {
    		sum += array[i]; result += sum;
    	}
    	System.out.println(result);
    }
}
